<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="easyway.com.movieguide.activity.BusRouteForm">

    <include
        android:id="@+id/addpeople_toolbar"
        layout="@layout/app_bar_main"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addpeople_toolbar"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addpeople_il_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <EditText
            android:inputType="number"
            android:id="@+id/addpeople_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Route Number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addpeople_il_phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        >

        <EditText
            android:inputType="textPersonName"
            android:id="@+id/addpeople_input_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Route Name" />
    </android.support.design.widget.TextInputLayout>


        <Button
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Submit"/>
    </LinearLayout>

</RelativeLayout>
